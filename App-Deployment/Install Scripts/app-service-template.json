{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "metadata": {
                "description": "Name of the app service"
            },
            "defaultValue": "AppDeploy-EUCToolbox"
        },
        "gitRepoUrl": {
            "type": "string",
            "metadata": {
                "description": "URL of the public git repository"
            },
            "defaultValue": "https://github.com/EUCToolbox/EUCToolbox"
        }
    },
    "resources": [
        
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-02-01",
            "name": "[parameters('appName')]",
            "location": "[resourceGroup().location]",
            "kind": "linux",
            "properties": {
                "serverFarmId": "[variables('appServicePlanId')]",
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "linuxFxVersion": "PHP|8.3",
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": false,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 1
                },
                "repositorySiteConfig": {
                    "branch": "master",
                    "repositoryUrl": "[parameters('gitRepoUrl')]"
                },
                "reserved": true
            },
            "dependsOn": [
                "[variables('appServicePlanId')]"
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-02-01",
            "name": "[variables('appServicePlanId')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "F1",
                "tier": "Free",
                "size": "F1",
                "family": "F",
                "capacity": 1
            },
            "properties": {
                "name": "[variables('appServicePlanId')]"
            }
        },
{
    "type": "Microsoft.Web/sites/extensions",
    "apiVersion": "2021-03-01",
    "name": "[concat(parameters('appName'), '/onedeploy')]",
    "dependsOn": [
        "[parameters('appName')]"
    ],
    "properties": {
        "packageUri": "https://github.com/EUCToolbox/EUCToolbox/raw/main/App-Deployment/Webpage%20Content.zip",
        "type": "zip"
    }
}

    ],
    "variables": {
        "appServicePlanId": "[concat('appServicePlan-', uniqueString(resourceGroup().id))]"
    }
}